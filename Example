    		   parentt2.remove(t2);
    		   parentt2.validate();
    		   parentt2.repaint();
    		   
    		   Container parentb = b.getParent();
    		   parentb.remove(b);
    		   parentb.validate();
    		   parentb.repaint();
    		   
