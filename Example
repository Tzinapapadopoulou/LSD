    	JFrame f = new JFrame("text");
    	
       f.getContentPane().setBackground(Color.BLACK);
 	   f.setSize(290,220);
 	   f.setLocation(735,550);
 	   f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
 	   JTextArea area=new JTextArea("some text");
       area.setBounds(0,0, 280,100);
